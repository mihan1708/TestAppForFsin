@model TestApplicationForFSIN.Models.Car

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="error">@ViewBag.error</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registration_number" class="control-label"></label>
                <input asp-for="Registration_number" class="form-control" />
                <span asp-validation-for="Registration_number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Release" class="control-label"></label>
                <input type="date" asp-for="Release" class="form-control" />
                <span asp-validation-for="Release" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date_of_registration" class="control-label"></label>
                <input type="date" asp-for="Date_of_registration" class="form-control" />
                <span asp-validation-for="Date_of_registration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Изменить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
