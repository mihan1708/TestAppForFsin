@model TestApplicationForFSIN.ViewModels.CreateInspectionViewModel

@{
    ViewData["Title"] = "CreateInspection";
}
<h1>Форма создания тех. осмотра</h1>

<div class="car_info">
    @Model.Car.Model
    @Model.Car.Registration_number
</div>
<form asp-action="Create">
    <div class="form-group">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <label asp-for="Date_inspection"></label>
        <input type="date" asp-for="Date_inspection" class="form-control" />
        <span asp-validation-for="Date_inspection"></span>
    </div>
    <div class="form-group">
        <label asp-for="Remarks"></label>
        <input asp-for="Remarks" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Number"></label>
        <input asp-for="Number" class="form-control" />
        <span asp-validation-for="Number"></span>
    </div>
    <div class="form-group">
        <input type="hidden" asp-for="Car.Id" class="form-control" />
        <input type="hidden" asp-for="Car.Model" class="form-control" />
        <input type="hidden" asp-for="Car.Registration_number" class="form-control" />
        <input type="hidden" asp-for="Car.Release" class="form-control" />
        <input type="hidden" asp-for="Car.Date_of_registration" class="form-control" />
    </div>
    <input type="submit" value="Добавить" class="btn btn-primary" />
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}